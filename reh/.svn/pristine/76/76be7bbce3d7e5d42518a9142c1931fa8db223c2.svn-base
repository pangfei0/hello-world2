/*errmsg*/
ul.errorMessage{
	color: red;
	text-align: center;
}
ul.errorMessage li{display: inline-block;}
/*****************中间栏样式****************/
/**************首页**************/
.main_left{width:430px; height:420px; float:left; border:#AEC4C1 thin ridge;background-color:#FFF}
.msg_top{width:auto;height:85px;background:#A3CE63;padding-bottom:10px;color:#30343D;border-bottom: #AEC4C1 1px ridge;}
.msg_top_content{font-size:16px;font-weight:bold;padding-top:12px;padding-left:30px;}
.msg{width:450px;height:50px;line-height:55px;font-size:20px;padding-left:40px;color:#282C34}
.msg a{color:#f50}
.msg a:hover{text-decoration:underline}
.main_right{width:500px; height:420px;float:left;margin-left:20px;border: #AEC4C1 1px ridge;background-color:#FFF}
.shortcut_group{width:100%;float:left;padding-left:30px;padding-top:12px;padding-bottom:2px;}
.shortcut_group h1{width:88%;font-size:18px;font-weight:bold;border-bottom:#AEC4C1 1px ridge;color:#3A9000}
.shortcut_group h2{width:100%;text-align:center;font-size:15px;padding-top:13px}
.shortcut_group a{color:#282C34;}
.shortcut_group a:hover{color:#3A7100;}
.shortcut{width:90px;float:left;padding-right:30px;padding-top:10px;padding-left:30px}
.shortcut img{width:60px;height:50px;text-align: center;padding-left:18px}
.msg_bottom{width:450px;height:80px;padding:24px;}
.msg_bottom a{display:block;height:50px;line-height:50px;color:#03f;font-weight:bold}
.msg_bottom a:hover{text-decoration: underline;}
.msg_bottom_left{border-right:#AEC4C1 thin ridge;font-size:15px;width:50px}
/*************发布信息************/
.main_border{width:1001px; height:auto;float:left; padding-top:5px; padding-bottom:60px;}
.infos{ margin-top:18px; padding-left:50px; float:left}
.infos select{ width:150px; margin-left:15px; margin-right:5px;margin-bottom:10px;}
.infos input{width:147px; margin-left:15px; margin-right:5px; margin-bottom:10px;}
.infos span{ vertical-align:top; margin-left:8px;height:22px; line-height:24px;}
.btns{margin:10px 0 10px 0}
.btns a:hover{text-decoration: underline;}
.add_btn{text-align:center;width:75px; height:30x; line-height:30px;display:inline-block; 
color:#FFF; background:#61A009;  margin-right:5px;}
.refresh_btn{float:right;color: #D4180F;line-height: 25px;margin-right: 10px }
.reles_btn{color:#61A009}
.del_btn{color:#D4180F}
.notify_btn{color:#00f}
.search-box a:hover{text-decoration: underline;}
/********登记企业信息-基本信息维护******/
.info_reg{ float:left; width:1005px;}
.title{width:86%; margin-left:20px;font-size:15px}
.title span{margin-left:35px;font-weight:bold; line-height:25px;}
.info_left{ width:480px; float:left; margin-top:10px;}
.tag{ margin-left:55px;float:left;margin-bottom:18px;}
.tag_title{float:left; line-height:21px;height:21px;font-size:14px;}
.tag_input{ width:200px; margin-left:50px;float:left;}
.tag select{width:205px; margin-left:50px;float:left;}
.info_right{width:520px; float:left; margin-top:5px;}
.reg_search_btn{ height:30xp; line-height:30px; margin-left:5px;}
.reg_search_btn img{float:right}
.search_map{ width:400px; height:145px; background:#999; float:left; margin-left:55px;}
/********登记企业信息-企业申请*********/
.apply_item{width:100%;float:left;min-height:40px;float: left;}
.apply_tag {width: 35%;text-align: right;float: left;font-size: 15px}
.apply_tag span{color:#FF0000}
.apply_input{width:60%;float: right;}
.apply_input label{vertical-align: top;padding-top:5px}
.apply_input input{width:220px; height:23px;}
.apply_input input[type='file']{border:1px #ABADB3 ridge;}
.apply_input select{width:225px; height:24px;}
input.submit_btn{background:#6EAE0F;color:#FFF; font-weight:bold; font-size:16px; margin-top:20px;width:100px; height:32px;line-height:32px;border: 0px;margin-right:20px;}

